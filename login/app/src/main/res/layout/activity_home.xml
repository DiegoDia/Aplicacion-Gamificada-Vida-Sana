<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="330dp">

        <ImageView
            android:id="@+id/google_btn"
            android:layout_width="wrap_content"
            android:layout_height="376dp"
            android:layout_margin="20dp"
            android:src="@drawable/fondo" />

    </LinearLayout>


    <TextView
        android:id="@+id/titulo1"
        android:layout_width="317dp"
        android:layout_height="70dp"
        android:layout_above="@+id/btnReciclar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="102dp"
        android:gravity="center"
        android:text="Vida Sana - A.S.A"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/titulo2"
        android:layout_width="317dp"
        android:layout_height="70dp"
        android:layout_above="@+id/btnReciclar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="33dp"
        android:gravity="center"
        android:text="“Cuéntales a tus amigos cómo reciclas”"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnReciclar"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/btn_verde"
        android:text="Reciclar"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btnLista"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="57dp"
        android:layout_toEndOf="@+id/btnReciclar"
        android:background="@drawable/btn_verde"
        android:text="Puntuaciones"
        android:textSize="13dp" />


</RelativeLayout>